<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp">

            <ImageView android:id="@+id/iv_burger_thumbnail"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/iv_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/add_shop_black"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_burger_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2sp"
                android:layout_toStartOf="@+id/iv_add_to_cart"
                android:layout_toEndOf="@id/iv_burger_thumbnail"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_burger_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_burger_title"
                android:layout_marginStart="2sp"
                android:layout_marginEnd="2sp"
                android:layout_toStartOf="@+id/iv_add_to_cart"
                android:layout_toEndOf="@id/iv_burger_thumbnail" />

            <TextView
                android:id="@+id/tv_burger_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_below="@id/tv_burger_description"
                android:layout_toEndOf="@id/iv_burger_thumbnail"
                android:layout_marginStart="2sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>